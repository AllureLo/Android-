<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@android:color/black</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <!-- Base progress theme. -->
    <style name="Picture_Progress_Style" parent="Widget.AppCompat.ProgressBar.Horizontal">
    </style>

    <declare-styleable name="picture">
        <attr name="src" format="reference" />
    </declare-styleable>
    <declare-styleable name="navigation">
        <attr name="titleSize" format="dimension" />
    </declare-styleable>
    <style name="main_menu_photo_anim">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextAppearance_TitleBar_Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- title文字样式（和toolbar自带样式一样，可自行修改） -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance_TitleBar_subTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <!-- 左右文字样式 （和toolbar副标题样式一样，可自行修改）-->
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
